<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">

    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>

<body>

    <div class="topnav">
        <a class="active" href="/cars">Cars</a>
        <a>--- </a>
        <a class="company" href="/brands">Brands</a>
        <a>--- </a>

        <a class="create" href="/create_car">Create_cars</a>
        <a>--- </a>
        <a class="create" href="/create_brands">Create_brands</a>
        <a>---</a>
        <a class="cart" href="/cart">Shopping_Cart</a>

    </div>


    <table>
        <tr>

            <th>Brand_id</th>
            <th>Name</th>



        </tr>

        <tr>
            <% listUser.forEach(function(user,index) { %>
        <tr>

            <td>
                <%=user.brand_id%>
            </td>
            <td>
                <%=user.name%>
            </td>
            <td>
                <div class="action-buttons">

                    <a href="/updateBrand/<%=user.brand_id%>">Edit_Brand</a>

                    <form action="/deleteBrand/<%= user.brand_id %>?_method=DELETE" method="POST"
                        style="display:inline;">
                        <button type="submit">Delete_Brand</button>
                    </form>

                </div>
            </td>


        </tr>
        <% }); %>


    </table>

</body>

</html>